{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "auth-login.schema.json",
  "type": "object",
  "required": ["email", "password"],
  "additionalProperties": false,
  "properties": {
    "email": { "type": "string", "format": "email" },
    "password": { "type": "string", "minLength": 8, "maxLength": 128 }
  }
}
