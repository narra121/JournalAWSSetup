{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to SAM API",
            "type": "node",
            "request": "attach",
            "address": "0.0.0.0",
            "port": 5858,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/var/task",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/src/**/*.ts"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "restart": false,
            // Uncomment to auto-start API before attaching:
             "preLaunchTask": "sam: start-api (debug)"
        }
    ]
}